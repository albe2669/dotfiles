(include "./modules/base/pill.yuck")
(include "./modules/base/icon-and-label.yuck")

(defpoll time
  :interval "1s"
  :initial "00:00"
  :run-while true
  `date +%H:%M`)

(defwidget clock []
  (pill
    (icon-and-label 
      :class "clock-widget"
      :icon "Ôê∫"
      :value "${time}"
    )
  )
)
